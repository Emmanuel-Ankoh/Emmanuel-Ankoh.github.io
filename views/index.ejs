<%- include('partials/head', { title }) %>
<main id="main">
  <section class="hero" aria-label="Intro">
    <div class="container">
      <h1 data-aos="fade-up">Hi, I'm <span class="accent">Emmanuel Ankoh</span></h1>
      <p class="subtitle" data-aos="fade-up" data-aos-delay="100">Full-Stack Developer · Problem Solver · Lifelong Learner</p>
      <p data-aos="fade-up" data-aos-delay="200">I build fast, accessible, and delightful web apps with clean code and solid engineering practices.</p>
      <div class="hero-ctas" data-aos="fade-up" data-aos-delay="300">
        <a href="/projects" class="btn btn-primary">View Projects</a>
        <a href="/contact" class="btn">Get in Touch</a>
      </div>
    </div>
  </section>

  <section class="featured" aria-labelledby="featured-heading">
    <div class="container">
      <h2 id="featured-heading">Featured Projects</h2>
      <div class="grid">
        <% if ((featured || []).length === 0) { %>
          <p>No featured projects yet. Check back soon!</p>
        <% } %>
        <% (featured || []).forEach((p, i) => { %>
          <article class="card" data-aos="fade-up" data-aos-delay="<%= i * 50 %>">
            <img src="<%= p.imageUrl || '/images/placeholder.svg' %>" alt="Screenshot of <%= p.title %>" />
            <div class="card-body">
              <h3><%= p.title %></h3>
              <p><%= p.description %></p>
              <div class="tags">
                <% (p.tech || []).forEach(t => { %>
                  <span class="tag"><%= t %></span>
                <% }) %>
              </div>
              <div class="actions">
                <% if (p.githubUrl) { %><a class="btn" href="<%= p.githubUrl %>" target="_blank" rel="noopener">Code</a><% } %>
                <% if (p.demoUrl) { %><a class="btn btn-primary" href="<%= p.demoUrl %>" target="_blank" rel="noopener">Live</a><% } %>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    </div>
  </section>
</main>
<%- include('partials/footer') %>
