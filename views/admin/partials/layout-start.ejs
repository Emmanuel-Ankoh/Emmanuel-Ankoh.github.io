<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> · Admin · <%= (site && site.name) || 'Portfolio' %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-Zfa+YzJ1ZsaAJ+lZeX7IuP89xDSHLVbkP4SRrped1IovnHgkmHGawEq+y3OC/qoB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-B4gbm8Rn2ryG5kyRjO6jwxKF1u9IiMaivGi99ZTSdKCbFf8gDuwZQzQpimeOqRCm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/admin.css">
  </head>
  <body>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/">EA Admin</a>
      <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#adminSidebar" aria-controls="adminSidebar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-nav flex-row flex-md-nowrap align-items-center ms-auto me-2">
        <span class="nav-item text-nowrap me-2 d-none d-md-inline"><%= (profile && profile.name) || (site && site.name) || 'Admin' %></span>
        <form class="mb-0" method="POST" action="/admin/logout">
          <% if (typeof csrfToken !== 'undefined') { %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <% } %>
          <button class="btn btn-sm btn-outline-light" type="submit">Logout</button>
        </form>
      </div>
    </header>

    <div class="container-fluid">
      <div class="row">
        <% const path = urlPath || ''; %>
        <nav id="adminSidebar" class="col-md-3 col-lg-2 d-md-block bg-body-tertiary sidebar collapse">
          <div class="position-sticky pt-3 sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2 <%= path === '/admin' ? 'active' : '' %>" href="/admin">
                  <i class="bi bi-speedometer2"></i>
                  Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2 <%= path.startsWith('/admin/projects') ? 'active' : '' %>" href="/admin/projects">
                  <i class="bi bi-kanban"></i>
                  Projects
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2 <%= path.startsWith('/admin/profile') ? 'active' : '' %>" href="/admin/profile">
                  <i class="bi bi-person-square"></i>
                  Profile
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2 <%= path.startsWith('/admin/messages') ? 'active' : '' %>" href="/admin/messages">
                  <i class="bi bi-envelope"></i>
                  Messages
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2 <%= path.startsWith('/admin/admins') ? 'active' : '' %>" href="/admin/admins">
                  <i class="bi bi-people"></i>
                  Admins
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2 <%= path.startsWith('/admin/change-password') ? 'active' : '' %>" href="/admin/change-password">
                  <i class="bi bi-shield-lock"></i>
                  Security
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
          <% if (flash) { %>
            <div class="alert alert-<%= flash.type === 'error' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
              <%= flash.message %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>